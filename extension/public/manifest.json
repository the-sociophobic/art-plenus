{
  "author": "Lef Vasilef",
  "manifest_version": 3,
  "name": "socrealizm.com.ua copy",
  "version": "1.0",
  "description": "Toolkit for content copy",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}